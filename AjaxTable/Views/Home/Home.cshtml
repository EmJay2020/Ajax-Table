<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="container" style="margin-top:20px">
        <div class="row">
            <div class="col-md-3">
                <input type="text" id="firstname" class="form-control" placeholder="First Name" />
            </div>
            <div class="col-md-3">
                <input type="text" id="lastname" class="form-control" placeholder="Last Name" />
            </div>
            <div class="col-md-3">
                <input type="text" id="age" class="form-control" placeholder="Age"/>
            </div>
            <div class="col-md-3">
                <button id="add" class="btn btn-primary btn-block">Add</button>
            </div>
        </div>
        <br />
        <br />
        <div>
            <table id="my-table" class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="my-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="text" id="mfirstname" class="form-control" />
                    <input type="text" id="mlastname" class="form-control" />
                    <input type="text" id="mage" class="form-control" />
                    <input type="hidden" id="h" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="Save">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="close">Close</button>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{

        <script src="~/js/Home.js"></script>
    }
</body>
</html>

